<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#BABABA" android:startColor="#E6F0F0" />
            <corners android:radius="10dip" />
            <padding android:bottom="8dip" android:left="5dip" android:right="5dip" android:top="8dip" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="#BABABA" android:startColor="#E6F0F0" />
            <corners android:radius="10dip" />
            <padding android:bottom="8dip" android:left="5dip" android:right="5dip" android:top="8dip" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#ffffff" android:startColor="#ffffff" />
            <corners android:radius="10dip" />
            <padding android:bottom="8dip" android:left="5dip" android:right="5dip" android:top="8dip" />
        </shape>
    </item>
</selector>
